require './params'

open(REGION_HDR) do |f|
  while l=f.gets
    eval l if /(NAXIS[12])\s*=\s*(\d+)/ =~ l
  end
end

# Tile parameter
TILE_NX = ENV["TILE_NX"]
TILE_NY = ENV["TILE_NY"]
TILE_PIXEL = 2000
NX = (TILE_NX || [NAXIS1/TILE_PIXEL,1].max).to_i
NY = (TILE_NY || [NAXIS2/TILE_PIXEL,1].max).to_i

task :dummy
